@model TicketSystem.API.Domain.ViewModels.Registration
@using  TicketSystem.API.Domain
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string msg = (string)ViewData["msg"];
}

<div class="page">
    <div class="page__content" id="page-content">
        <div class="content d-none d-lg-block" id="content" style="background: url(../assets/img/backgrounds/bridge.jpg) left center no-repeat; background-size: 100% auto">
        </div>
        <div class="important-container login-container">
            <div class="content">
                <a asp-action="Login" class="logo-holder logo-holder--lg logo-holder--wide">
                    <div class="logo-text">
                        <strong class="text-primary">#</strong>
                        <strong>TICKET SYSTEM</strong>
                    </div>
                </a>
                @if (!String.IsNullOrEmpty(msg))
                {
                    <p class="caption text-center margin-bottom-30" id="msg">
                       @msg
                    </p>
                }
                <form asp-action="Registration" autocomplete="off">
                    <div class="form-group">
                        <label for="firstname">Firstname</label>
                        <input type="text" class="form-control" placeholder="Your firstname" asp-for="firstname" required />
                    </div>
                    <div class="form-group">
                        <label for="lastname">Lastname</label>
                        <input type="text" class="form-control" placeholder="Your firstname" asp-for="lastname" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" placeholder="Your personal email" asp-for="email" required />
                    </div>
                    <div class="form-group">
                        <label for="phoneNumber">Phone Number</label>
                        <input type="number" class="form-control" placeholder="Your phone number" asp-for="phoneNumber" required />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" placeholder="Your password" asp-for="password" autocomplete="new-password" required />
                    </div>
                    @*<div class="form-group">
                <label>Client ID</label>
                <input type="text" class="form-control" placeholder="Your clientID" asp-for="clientId" required />
            </div>*@
                    <div class="form-group">
                        <label>Access Type</label>
                        <select asp-for="accessType" asp-items="Html.GetEnumSelectList<Enums.AccessType>()" class="form-control" required>
                            <option value="">Select Type</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-6">
                                <button class="btn btn-primary btn-block">
                                    Create Account
                                </button>
                            </div>
                            <div class="col-6">
                                <a asp-action="Login" class="btn btn-outline-primary btn--icon">
                                    <span class="fa fa-angle-left"></span>Account? Login
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
<script type="text/javascript">
    $(document).ready(function () {
        setTimeout(function(){
                $("#msg").fadeOut();
            }, 20000);
    });
</script>
 }