@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
}
<!-- PAGE ASIDE PANEL -->
<div class="page-aside invert" id="page-aside">
    <div class="scroll" style="max-height: 100%">
        <div class="navigation" id="navigation-default">
            <div class="user user--bordered user--lg user--w-lineunder user--controls">
                <div class="user__name">
                    <strong>@if (!string.IsNullOrEmpty(username)) { @username; }</strong><br /><span class="text-muted">Client</span>
                    <div class="user__controls">
                        <div class="dropdown">
                            <button class="btn btn-light btn-sm btn-icon"
                                    data-toggle="dropdown"
                                    aria-haspopup="true"
                                    aria-expanded="false">
                                <span class="fa fa-cog"></span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right"
                                 aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="Home" asp-action="Profile">Profile</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Logout">Log out</a>
                            </div>
                        </div>
                    </div>
                </div>                
            </div>
            <ul>
                <li class="title">Main</li>
                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <span class="icon li-home"></span>
                        <span class="text">Dashboards</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="RaiseTicket">
                        <span class="icon li-ticket"></span>
                        <span class="text">Lay Complain</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="TreatedTicket">
                        <span class="icon li-cross"></span>
                        <span class="text">Treated Complain</span>
                    </a>
                </li>               
                <li>
                    <a asp-controller="Home" asp-action="PendingTicket">
                        <span class="icon li-pen"></span>
                        <span class="text">Pending Ticket</span>
                    </a>
                </li>
                <li>
                    <a asp-controller="Home" asp-action="Logout">
                        <span class="icon li-toggle-off"></span>
                        <span class="text">Logout</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
<!-- //END PAGE ASIDE PANEL -->