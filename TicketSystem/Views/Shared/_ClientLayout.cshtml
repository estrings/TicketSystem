<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>

    <environment include="Development,Staging,Production">
        <!-- CSS INCLUDE -->
        <link href="~/css/styles2c70.css" rel="stylesheet" />
    </environment>
</head>
<body>

    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor HttpContextAccessor
    <!-- PAGE WRAPPER -->
    <div class="page page--w-header">
        <!-- beginning of header -->
        <partial name="_clientHeader" />
        <!-- end of header -->

        <!-- beginning of body -->
        <div class="page__content page__content--w-aside-fixed" id="page-content">
            <partial name="_clientSideBar" />
            @RenderBody()
        </div>        
        <!-- end of body -->
    </div>    

    <environment include="Development,Staging,Production">
        <script src="~/js/vendors/jquery/jquery.min.js"></script>
        <script src="~/js/vendors/jquery/jquery-migrate.min.js"></script>
        <script src="~/js/vendors/bootstrap/bootstrap.bundle.min.js"></script>
        <script src="~/js/vendors/mcustomscrollbar/jquery.mCustomScrollbar.concat.min.js"></script>
        <script type="text/javascript" src="js/vendors/select2/select2.min.js"></script>
        <script src="~/js/vendors/datatables/datatables.min.js"></script>
        <script src="~/js/vendors/datatables/extensions/dataTables.buttons.min.js"></script>
        <script src="~/js/vendors/datatables/extensions/buttons.flash.min.js"></script>
        <script src="~/cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
        <script src="~/cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
        <script src="~/cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
        <script src="~/js/vendors/datatables/extensions/buttons.html5.min.js"></script>
        <script src="~/js/vendors/datatables/extensions/buttons.print.min.js"></script>
        <script src="~/js/vendors/datatables/extensions/buttons.colVis.min.js"></script>
        <script src="~/js/app.js"></script>
        <script src="~/js/plugins.js"></script>
        <script src="~/js/demo.js"></script>
        <script src="~/js/settings.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script type="text/javascript">
            document.addEventListener("DOMContentLoaded", function () {
                app._loading.show($("#dt-ext-buttons"), { spinner: true });
                $("#dt-example-buttons").DataTable({
                    dom: "Bfrtip",
                    buttons: ["excel", "pdf", "print"],
                    initComplete: function (settings, json) {
                        setTimeout(function () {
                            app._loading.hide($("#dt-ext-buttons"));
                        }, 1000);
                    }
                });
            });
        </script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>

