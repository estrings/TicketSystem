@model TicketSystem.API.Domain.ViewModels.Support
@using TicketSystem.API.Domain
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "OnBoard Support";
    string msg = (string)TempData["msg"];
}
<!-- //END SIDEPANEL --><!-- PAGE CONTENT CONTAINER -->
<div class="content" id="content">
    <!-- PAGE HEADING -->
    <div class="page-heading">
        <div class="page-heading__container">
            @*<p class="caption">Welcome Estring</p>*@
        </div>
        <nav aria-label="breadcrumb" role="navigation">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Onboard Support</li>
            </ol>
        </nav>
    </div>
    <!-- //END PAGE HEADING -->
    <div class="container-fluid">
        <div class="form-row">
            <div class="col-12 col-md-2"></div>
            <div class="col-12 col-md-7">
                <div class="card">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(msg))
                        {
                            <p class="caption text-center margin-bottom-30" id="msg">
                                @msg
                            </p>
                        }
                    <form asp-action="OnBoardClientSupport" autocomplete="off">
                        <div class="form-group">
                            <label for="firstName">Firstname</label>
                            <input type="text" class="form-control" placeholder="Your firstname" asp-for="firstName" required />
                        </div>
                        <div class="form-group">
                            <label for="lastName">Lastname</label>
                            <input type="text" class="form-control" placeholder="Your lastname" asp-for="lastName" required />
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" placeholder="Your personal email" asp-for="email" required />
                        </div>
                        <div class="form-group">
                            <label for="phoneNumber">Phone No</label>
                            <input type="text" class="form-control" placeholder="Your phone number" asp-for="phoneNumber" required />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" placeholder="Your phone number" asp-for="password" required />
                        </div>
                        <div class="form-group">
                            <label for="address">AccessType</label>
                            <select asp-for="accessType" asp-items="Html.GetEnumSelectList<Enums.AccessType>()" class="form-control" required>
                                <option value="">Select Access Type</option>

                            </select>
                        </div>
                        <button class="btn btn-secondary">
                            OnBoard Support
                        </button>
                    </form>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-2"></div>
        </div>
    </div>
</div>
<!-- //END PAGE CONTENT CONTAINER -->
@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {
        setTimeout(function(){
                $("#msg").fadeOut();
            }, 20000);
    });
    </script>
}



