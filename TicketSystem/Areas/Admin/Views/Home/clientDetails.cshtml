@model TicketSystem.API.Domain.ViewModels.ClientProfile
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- //END SIDEPANEL --><!-- PAGE CONTENT CONTAINER -->
<div class="content" id="content">
    <!-- PAGE HEADING -->
    <div class="page-heading">
        <div class="page-heading__container">
            <h1 class="title">Client Profile</h1>
            <p class="caption">Welcome Estring</p>
        </div>
        <nav aria-label="breadcrumb" role="navigation">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">Dashboard</a>
                </li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item active">Client Profile</li>
            </ol>
        </nav>
    </div>
    <!-- //END PAGE HEADING -->
    <div class="container-fluid">
        <div class="row margin-bottom-20">
            <div class="col-12 col-lg-3">
                <div class="widget">
                    <div class="widget__icon_layer widget__icon_layer--right">
                        <span class="li-window"></span>
                    </div>
                    <div class="widget__container">
                        <div class="widget__line">
                            <div class="widget__icon">
                                <span class="li-window"></span>
                            </div>
                            <div class="widget__title">Projects</div>
                            <div class="widget__subtitle">
                                Count of active projects
                            </div>
                        </div>
                        <div class="widget__box widget__box--left">
                            <div class="widget__informer">5 projects</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <div class="widget">
                    <div class="widget__icon_layer widget__icon_layer--right">
                        <span class="li-users"></span>
                    </div>
                    <div class="widget__container">
                        <div class="widget__line">
                            <div class="widget__icon">
                                <span class="li-users"></span>
                            </div>
                            <div class="widget__title">Users activity</div>
                            <div class="widget__subtitle">Online operators</div>
                        </div>
                        <div class="widget__box widget__box--left">
                            <div class="widget__informer">12 operators</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <div class="widget">
                    <div class="widget__icon_layer widget__icon_layer--right">
                        <span class="li-receipt"></span>
                    </div>
                    <div class="widget__container">
                        <div class="widget__line">
                            <div class="widget__icon">
                                <span class="li-receipt"></span>
                            </div>
                            <div class="widget__title">Open payments</div>
                            <div class="widget__subtitle">Payments summary</div>
                        </div>
                        <div class="widget__box widget__box--left">
                            <div class="widget__informer">
                                6 payments for $2,485.00
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <div class="widget">
                    <div class="widget__icon_layer widget__icon_layer--right">
                        <span class="li-lifebuoy"></span>
                    </div>
                    <div class="widget__container">
                        <div class="widget__line">
                            <div class="widget__icon">
                                <span class="li-lifebuoy"></span>
                            </div>
                            <div class="widget__title">Support tickets</div>
                            <div class="widget__subtitle">
                                Count of opened tickets
                            </div>
                        </div>
                        <div class="widget__box widget__box--left">
                            <div class="widget__informer">5 of 2,133</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="col-12 col-md-6 col-lg-6">
                <div class="card card-inner-container--up">
                    <div class="card-body">
                        <div class="card-inner-container card-inner-container card-inner-container--light">
                            <div class="user user--rounded user--bordered user--lg margin-bottom-0">
                                <div class="user__name">
                                    Name:<strong>
                                        @if (Model.responseObject != null)
                                        {@Model.responseObject.name}
                                </strong><br /><span class="text-muted">
                                    Email: <b>
                                        @if (Model.responseObject != null)
                                        {@Model.responseObject.email}
                                </b>
                                </span>
                                </div>
                            </div>
                        </div>
                        <div class="row margin-bottom-20 text-center">
                            <div class="col-12">
                                <p class="margin-bottom-10">
                                    Address: 
                                    <b>
                                        @if (Model.responseObject != null)
                                        {@Model.responseObject.address;
                                    }
                                    </b>                                    
                                </p>
                            </div>
                            <div class="col-12">
                                <div class="text-muted margin-bottom-5">
                                    Website: <b>www.client_web_adrress@domain.com</b>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="text-muted">
                                    @if (Model.responseObject != null)
                                    {@Model.responseObject.phoneNumber;
                                }
                                </div>
                            </div>
                        </div>
                        @*<div class="row">
                            <div class="col-6">
                                <div class="user-group user-group--bordered">
                                    <div class="user user--rounded">
                                        <img src="assets/img/users/user_1.jpg" />
                                    </div>
                                    <div class="user user--rounded">
                                        <img src="assets/img/users/user_2.jpg" />
                                    </div>
                                    <div class="user user--rounded">
                                        <img src="assets/img/users/user_3.jpg" />
                                    </div>
                                    <div class="user user--rounded">
                                        <img src="assets/img/users/user_4.jpg" />
                                    </div>
                                    <div class="user user--rounded">
                                        <img src="assets/img/users/user_5.jpg" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-6 text-right">
                                <span class="text-muted">15 min ago</span>
                            </div>
                        </div>*@
                    </div>
                </div>
            </div>
            <div></div>
        </div>
    </div>
</div>
<!-- //END PAGE CONTENT CONTAINER -->