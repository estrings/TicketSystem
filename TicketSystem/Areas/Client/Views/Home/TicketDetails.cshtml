@model TicketSystem.API.Domain.ViewModels.TicketDetail
@{
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}
<!-- //END SIDEPANEL --><!-- PAGE CONTENT CONTAINER -->
<div class="content" id="content">
    <!-- PAGE HEADING -->
    <div class="page-heading">
        <div class="page-heading__container">
            <h1 class="title">Client Profile</h1>
            <p class="caption">Welcome Estring</p>
        </div>
        <nav aria-label="breadcrumb" role="navigation">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">Dashboard</a>
                </li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item active">Ticket Details</li>
            </ol>
        </nav>
    </div>
    <!-- //END PAGE HEADING -->
    <div class="container-fluid">
        <div class="row margin-bottom-20">
            <div class="col-12 col-lg-3">
                <div class="widget">
                    <div class="widget__icon_layer widget__icon_layer--right">
                        <span class="li-window"></span>
                    </div>
                    <div class="widget__container">
                        <div class="widget__line">
                            <div class="widget__icon">
                                <span class="li-window"></span>
                            </div>
                            <div class="widget__title">Projects</div>
                            <div class="widget__subtitle">
                                Count of active projects
                            </div>
                        </div>
                        <div class="widget__box widget__box--left">
                            <div class="widget__informer">5 projects</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <div class="widget">
                    <div class="widget__icon_layer widget__icon_layer--right">
                        <span class="li-users"></span>
                    </div>
                    <div class="widget__container">
                        <div class="widget__line">
                            <div class="widget__icon">
                                <span class="li-users"></span>
                            </div>
                            <div class="widget__title">Users activity</div>
                            <div class="widget__subtitle">Online operators</div>
                        </div>
                        <div class="widget__box widget__box--left">
                            <div class="widget__informer">12 operators</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <div class="widget">
                    <div class="widget__icon_layer widget__icon_layer--right">
                        <span class="li-receipt"></span>
                    </div>
                    <div class="widget__container">
                        <div class="widget__line">
                            <div class="widget__icon">
                                <span class="li-receipt"></span>
                            </div>
                            <div class="widget__title">Open Tickets</div>
                        </div>
                        <div class="widget__box widget__box--left">
                            <div class="widget__informer">
                                6 payments for $2,485.00
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <div class="widget">
                    <div class="widget__icon_layer widget__icon_layer--right">
                        <span class="li-lifebuoy"></span>
                    </div>
                    <div class="widget__container">
                        <div class="widget__line">
                            <div class="widget__icon">
                                <span class="li-lifebuoy"></span>
                            </div>
                            <div class="widget__title">Support tickets</div>
                            <div class="widget__subtitle">
                                Count of opened tickets
                            </div>
                        </div>
                        <div class="widget__box widget__box--left">
                            <div class="widget__informer">5 of 2,133</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-3"></div>
            <div class="col-12 col-md-6 col-lg-6">
                <div class="card card-inner-container--up">
                    <div class="card-body">
                        <div class="card-inner-container card-inner-container card-inner-container--light">
                            <div class="user user--rounded user--bordered user--lg margin-bottom-0">
                                <div class="user__name">
                                    Client Name:<strong>
                                        @if (Model.responseObject != null)
                                        {@Model.responseObject.client}
                                    </strong><br /><span class="text-muted">
                                        Email: <b>
                                            @if (Model.responseObject != null)
                                            {@Model.responseObject.client}
                                        </b>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="row margin-bottom-20 text-center">
                            <div class="col-12">
                                <p class="margin-bottom-10">
                                    Ticket Description:
                                    <b>
                                        @if (Model.responseObject != null)
                                        {@Model.responseObject.description;
                                    }
                                    </b>
                                </p>
                            </div>
                            <div class="col-12">
                                <p class="margin-bottom-10">
                                    Request Type:
                                    <b>
                                        @if (Model.responseObject != null)
                                        {@Model.responseObject.requestType;
                                    }
                                    </b>
                                </p>
                            </div>
                            <div class="col-12">
                                <p class="margin-bottom-10">
                                    Ticket Status:
                                    <b>
                                        @if (Model.responseObject != null)
                                        {@Model.responseObject.ticketStatus;
                                    }
                                    </b>
                                </p>
                            </div>
                            <div class="col-12">
                                <p class="margin-bottom-10">
                                    Priority Level:
                                    <b>
                                        @if (Model.responseObject != null)
                                        {@Model.responseObject.priorityLevel;
                                    }
                                    </b>
                                </p>
                            </div>
                            <div class="col-12">
                                <p class="margin-bottom-10">
                                    Opened Date:
                                    <b>
                                        @if (Model.responseObject != null)
                                        {@Model.responseObject.openDate;
                                    }
                                    </b>
                                </p>
                            </div>                            
                            @*<div class="col-12">
            <div class="text-muted">
                @if (Model.responseObject != null)
                {@Model.responseObject.phoneNumber;
            }
            </div>
        </div>*@
                        </div>                        
                    </div>
                </div>
            </div>
            <div></div>
        </div>
    </div>
</div>
<!-- //END PAGE CONTENT CONTAINER -->
